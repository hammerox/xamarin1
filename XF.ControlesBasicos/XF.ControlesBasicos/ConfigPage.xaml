<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.ControlesBasicos.ConfigPage">
    <TableView>
        <TableView.Root>
            <TableSection Title="Privacidade">
                <SwitchCell x:Name="emailSwitch" 
                            Text="Aceita receber e-mail?" 
                            On="True"
                            OnChanged="SwitchCell_OnChanged"/>
                <EntryCell x:Name="emailEntry" 
                           Placeholder="Email" />
            </TableSection>
        </TableView.Root>
    </TableView>
</ContentPage>